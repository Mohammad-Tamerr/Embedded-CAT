#include <util/delay.h>
#include "Temp.h"

u16 Show_U8_Temp()
{
	ADC_READING_VALUE();
	u16 Millivolt = (u16)( (u32) ( (ADC_READING_VALUE) * (5000UL) ) ) / (1024) ;
	return Millivolt ;
}
