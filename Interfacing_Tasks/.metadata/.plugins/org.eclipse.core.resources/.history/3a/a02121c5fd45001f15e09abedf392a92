#ifndef MCAL_TIMERS_TIMERS_CONFIG_H_
#define MCAL_TIMERS_TIMERS_CONFIG_H_

#define 	NORMAL					0
#define 	PWM_PHASE_CORRECT		1
#define 	CTC						2
#define 	FAST_PWM				3

#define 	ENABLE					1
#define 	DISABLE					0

#define     TOGGLE              	1
#define     RESERVED            	1
#define     CLEAR               	2
#define     SET                 	3

#define     NO_CLOCK             	0
#define     DIV_BY_1             	0
#define     DIV_BY_8             	0
#define     DIV_BY_64            	0
#define     DIV_BY_256           	0
#define     DIV_BY_1024          	0
#define     CLOCK_ON_FALLING_EDGE	0
#define     CLOCK_ON_RISING_EDGE 	0

/*Select Force Output Compare Mode :
*	Options :  	1-ENABLE
*			   	2-DISABLE
*/
#define 	Output_Compare_Mode			DISABLE

/*Select Waveform Generation Mode :
*	Options :  	1-NORMAL
*			   	2-PWM_PHASE_CORRECT
*			   	3-CTC
*			   	4-FAST_PWM
*/
#define 	Waveform_Generation_Mode	Normal

/*Select Compare Output Mode, non-PWM Mode (OC0 behavior):
*	Options :  	1-NORMAL
*			   	2-TOGGLE / RESERVED  ->(PWM CASE)
*			   	3-CLEAR
*			   	4-SET
*/
#define 	OC0_behavior			Normal

/*Select Timer_Clock:
*	Options :  	1. NO_CLOCK
*			   	2. DIV_BY_1
*			   	3. DIV_BY_8
*			   	4. DIV_BY_64
*               5. DIV_BY_256
*               6. DIV_BY_1024
*               7. CLOCK_ON_FALLING_EDGE
*				8. CLOCK_ON_RISING_EDGE
*/
#define TIMER_CLOCK					DIV_BY_1

#endif /* MCAL_TIMERS_TIMERS_CONFIG_H_ */
