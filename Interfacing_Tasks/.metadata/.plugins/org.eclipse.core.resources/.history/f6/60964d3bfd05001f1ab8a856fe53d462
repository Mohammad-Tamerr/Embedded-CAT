#ifndef MCAL_PORT_PORT_CONFIG_H_
#define MCAL_PORT_PORT_CONFIG_H_

/* choose INPUT for 0 OR 1 for OUTPUT */

#define PORTA_PIN0_DIR			OUTPUT
#define PORTA_PIN1_DIR			OUTPUT
#define PORTA_PIN2_DIR			OUTPUT
#define PORTA_PIN3_DIR			OUTPUT
#define PORTA_PIN4_DIR			OUTPUT
#define PORTA_PIN5_DIR			OUTPUT
#define PORTA_PIN6_DIR			OUTPUT
#define PORTA_PIN7_DIR			OUTPUT

#define PORTB_PIN0_DIR			OUTPUT
#define PORTB_PIN1_DIR			OUTPUT
#define PORTB_PIN2_DIR			OUTPUT
#define PORTB_PIN3_DIR			INPUT
#define PORTB_PIN4_DIR			INPUT
#define PORTB_PIN5_DIR			INPUT
#define PORTB_PIN6_DIR			INPUT
#define PORTB_PIN7_DIR			INPUT

#define PORTC_PIN0_DIR			INPUT
#define PORTC_PIN1_DIR			INPUT
#define PORTC_PIN2_DIR			INPUT
#define PORTC_PIN3_DIR			INPUT
#define PORTC_PIN4_DIR			INPUT
#define PORTC_PIN5_DIR			INPUT
#define PORTC_PIN6_DIR			INPUT
#define PORTC_PIN7_DIR			INPUT

#define PORTD_PIN0_DIR			INPUT
#define PORTD_PIN1_DIR			INPUT
#define PORTD_PIN2_DIR			INPUT
#define PORTD_PIN3_DIR			INPUT
#define PORTD_PIN4_DIR			INPUT
#define PORTD_PIN5_DIR			INPUT
#define PORTD_PIN6_DIR			INPUT
#define PORTD_PIN7_DIR			INPUT

/*CHOOSEE: 0 FOR FLOATING IF INPUT, LOW IF OUTPUT
 *         1 FOR PUIIEDUP IF INPUT, HIGH IF OUTPUT
 */

/*PORTA PINS*/

#define PORTA_PIN0_INIT_VALUE     LOW
#define PORTA_PIN1_INIT_VALUE     LOW
#define PORTA_PIN2_INIT_VALUE     LOW
#define PORTA_PIN3_INIT_VALUE     LOW
#define PORTA_PIN4_INIT_VALUE     LOW
#define PORTA_PIN5_INIT_VALUE     LOW
#define PORTA_PIN6_INIT_VALUE     LOW
#define PORTA_PIN7_INIT_VALUE     LOW

/*PORTB_PINS*/

#define PORTB_PIN0_INIT_VALUE     LOW
#define PORTB_PIN1_INIT_VALUE     LOW
#define PORTB_PIN2_INIT_VALUE     LOW
#define PORTB_PIN3_INIT_VALUE     LOW
#define PORTB_PIN4_INIT_VALUE     LOW
#define PORTB_PIN5_INIT_VALUE     LOW
#define PORTB_PIN6_INIT_VALUE     LOW
#define PORTB_PIN7_INIT_VALUE     LOW

/*PORTC_PINS*/

#define PORTC_PIN0_INIT_VALUE     HIGH
#define PORTC_PIN1_INIT_VALUE     HIGH
#define PORTC_PIN2_INIT_VALUE     HIGH
#define PORTC_PIN3_INIT_VALUE     HIGH
#define PORTC_PIN4_INIT_VALUE     HIGH
#define PORTC_PIN5_INIT_VALUE     HIGH
#define PORTC_PIN6_INIT_VALUE     HIGH
#define PORTC_PIN7_INIT_VALUE     HIGH

/*PORTD_PINS*/

#define PORTD_PIN0_INIT_VALUE     HIGH
#define PORTD_PIN1_INIT_VALUE     HIGH
#define PORTD_PIN2_INIT_VALUE     HIGH
#define PORTD_PIN3_INIT_VALUE     HIGH
#define PORTD_PIN4_INIT_VALUE     HIGH
#define PORTD_PIN5_INIT_VALUE     HIGH
#define PORTD_PIN6_INIT_VALUE     HIGH
#define PORTD_PIN7_INIT_VALUE     HIGH

#endif /* MCAL_PORT_PORT_CONFIG_H_ */
